<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Register_Opportunity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/Register_Opportunity"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/opportunity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Register_Opportunity"
        android:layout_marginTop="15dp"
        android:maxLength="50"
        android:hint="@string/opportunity_name"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/organization_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/opportunity_name"
        android:layout_marginTop="15dp"
        android:maxLength="50"
        android:hint="@string/Organization_Name"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/organization_name"
        android:layout_marginTop="15dp"
        android:hint="@string/Description"
        android:maxLength="200"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_marginTop="15dp"
        android:maxLength="50"
        android:hint="@string/Address"
        android:inputType="textPostalAddress"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/maximum_volunteers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:layout_marginTop="15dp"
        android:maxLength="5"
        android:hint="@string/Maximum_Volunteers"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/maximum_volunteers"
        android:layout_marginTop="15dp"
        android:hint="@string/Date"
        android:maxLength="10"
        android:inputType="date"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_date"
        android:layout_marginTop="15dp"
        android:hint="@string/Starting_Time"
        android:maxLength="15"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_time"
        android:layout_marginTop="15dp"
        android:hint="@string/Ending_Time"
        android:inputType="text"
        android:maxLength="15"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/create_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/blue"
        android:gravity="center"
        android:text="@string/Enter"
        android:textSize="20sp" />

</RelativeLayout>