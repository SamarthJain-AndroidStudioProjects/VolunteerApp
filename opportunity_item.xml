<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/view_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_baseline_view_24" />

    <TextView
        android:id="@+id/left_button"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:text="@string/view"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/view_opportunity_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toStartOf="@id/opportunity_btn"
        android:layout_toLeftOf="@id/opportunity_btn"
        android:layout_toEndOf="@id/view_button"
        android:layout_toRightOf="@id/view_button"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/opportunity_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_baseline_delete_24" />

    <TextView
        android:id="@+id/right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/opportunity_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="@string/delete"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/right_button"
        android:layout_marginTop="5dp"
        android:background="@color/black" />

</RelativeLayout>