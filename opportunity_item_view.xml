<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/opportunity_name_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/organizer_name_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:text="@string/organizer_item_view"
        android:layout_below="@id/opportunity_name_item_view"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/description_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/description_item_view"
        android:layout_below="@id/organizer_name_item_view"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/address_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/address"
        android:layout_above="@id/start_date_item_view"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/start_date_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/start_date"
        android:layout_above="@id/start_time_item_view"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/start_time_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/start_time"
        android:layout_above="@id/end_time_item_view"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/end_time_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/end_time"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"/>



</RelativeLayout>